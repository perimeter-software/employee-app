container_commands:
  01_fix_cache_permissions:
    command: |
      mkdir -p /var/app/current/.next/cache/images
      mkdir -p /var/app/current/.next/cache/webpack
      chown -R webapp:webapp /var/app/current/.next/cache
      chmod -R 755 /var/app/current/.next/cache
  02_fix_tmp_permissions:
    command: |
      mkdir -p /tmp/.next
      chown -R webapp:webapp /tmp/.next
      chmod -R 755 /tmp/.next
  03_fix_app_permissions:
    command: |
      chown -R webapp:webapp /var/app/current
      find /var/app/current -type d -exec chmod 755 {} \;
      find /var/app/current -type f -exec chmod 644 {} \;
